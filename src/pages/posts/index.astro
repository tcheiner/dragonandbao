---
import { getCollection } from 'astro:content';
import BaseLayout from "../../layouts/BaseLayout.astro";
import Breadcrumb from "../../components/utils/Breadcrumb.astro";
import BlogCard from "../../components/containers/BlogCard.astro";

// Get all blog posts
const allPosts = await getCollection('posts');

// Sort by publishDate DESC if available, otherwise by title
allPosts.sort((a, b) => {
    if (a.data.publishDate && b.data.publishDate) {
        return new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime();
    }
    return a.data.title.localeCompare(b.data.title);
});

// Extract all tags from posts
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))].sort();

const breadcrumbTrail = [
    { label: "Home", url: "/" },
    { label: "Blog", url: null }, // Current page has no link
];
---

<BaseLayout title="Blog">
    <main class="relative overflow-hidden">
        <!-- Centered container -->
        <div class="relative mx-auto px-4 sm:px-6 max-w-7xl py-12 md:px-12">
            <!-- Breadcrumb -->
            <Breadcrumb trail={breadcrumbTrail} />
            
            <!-- Tags Section -->
            {allTags.length > 0 && (
                <div class="mb-8">
                    <h2 class="text-2xl font-bold mb-4">Browse by Tag</h2>
                    <div class="tags-container">
                        {allTags.map(tag => (
                            <a 
                                href={`/posts/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                                class="tag-button blog-tag-button"
                            >
                                {tag}
                            </a>
                        ))}
                    </div>
                </div>
            )}

            <!-- Blog Content -->
            <BlogCard
                posts={allPosts}
                title="Blog Posts"
            />
        </div>
    </main>
</BaseLayout>
