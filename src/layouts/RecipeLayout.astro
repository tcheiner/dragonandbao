---
import ContentTags from "../components/ContentTags.astro";
import { siteConfig } from "../content/siteConfig.js";

const { frontmatter} = Astro.props;
const { slug, title, creditUrl, image, idealImage, realisticImage, prepTime, cookTime, servings, calories, tags, content } = Astro.props;
---

<article class="recipe">
    <header>
        <h1>{title}</h1>
        <p class="credits">Recipe by: <a href={creditUrl} target="_blank" rel="noopener noreferrer">Source</a></p>
    </header>

    <section class="recipe-meta">
        <p><strong>Prep Time:</strong> {prepTime} minutes</p>
        <p><strong>Cook Time:</strong> {cookTime} minutes</p>
        <p><strong>Servings:</strong> {servings}</p>
        <p><strong>Calories:</strong> {calories}</p>
        <p><strong>Tags:</strong> {tags?.join(', ')}</p>
    </section>

    <section class="recipe-images">
        {idealImage && (
            <div>
                <h3>Ideal Image</h3>
                <img src={idealImage} alt={`Ideal version of ${title}`} />
            </div>
        )}
        {realisticImage && (
            <div>
                <h3>Realistic Image</h3>
                <img src={realisticImage} alt={`Realistic version of ${title}`} />
            </div>
        )}
    </section>

    <section class="recipe-content">
        <slot />
    </section>
</article>

<style>
    .recipe {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        max-width: 800px;
        margin: 0 auto;
        padding: 1rem;
    }

    .recipe header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .recipe-meta {
        margin-bottom: 2rem;
        background: #f9f9f9;
        padding: 1rem;
        border-radius: 8px;
    }

    .recipe-images {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    @media (min-width: 768px) {
        .recipe-images {
            flex-direction: row;
        }
    }

    .recipe-images div {
        flex: 1;
        text-align: center;
        width: 100%;
        max-width: 400px;
    }

    .recipe-images img {
        max-width: 100%;
        border-radius: 8px;
        margin: 0 auto;
    }

    .recipe-content {
        margin-bottom: 2rem;
    }

    .recipe-content h2 {
        color: #0288d1;
        border-bottom: 2px solid #e0e0e0;
        padding-bottom: 0.5rem;
        margin-top: 2rem;
    }

    .recipe-content ul, .recipe-content ol {
        padding-left: 1.5rem;
    }

    .recipe-content li {
        margin-bottom: 0.5rem;
    }
</style>

