---
import BaseLayout from "./BaseLayout.astro";
import Container from "../components/Container.astro";
import { siteConfig } from "../content/siteConfig.js";

const { frontmatter} = Astro.props;
const { slug, title, creditUrl, image, idealImage, realisticImage, prepTime, cookTime, servings, calories, tags, content } = Astro.props;
---

<BaseLayout title={title}>
    <Container>
        <div class="max-w-4xl mx-auto">
            <div class="mb-8">
                <a href="/recipes" class="text-aquamarine-blue-500 hover:underline flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Back to Recipes
                </a>
            </div>
            
            <article class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="p-6">
                    <header class="mb-6 text-center">
                        <h1 class="text-3xl font-bold mb-2">{title}</h1>
                        {creditUrl && (
                            <p class="text-gray-600">
                                Recipe from: <a href={creditUrl} target="_blank" rel="noopener noreferrer" class="text-aquamarine-blue-500 hover:underline">Source</a>
                            </p>
                        )}
                    </header>

                    <div class="flex flex-wrap gap-4 mb-6 justify-center">
                        <div class="bg-gray-50 px-4 py-2 rounded-md">
                            <span class="block text-sm text-gray-500">Prep Time</span>
                            <span class="font-medium">{prepTime} min</span>
                        </div>
                        <div class="bg-gray-50 px-4 py-2 rounded-md">
                            <span class="block text-sm text-gray-500">Cook Time</span>
                            <span class="font-medium">{cookTime} min</span>
                        </div>
                        <div class="bg-gray-50 px-4 py-2 rounded-md">
                            <span class="block text-sm text-gray-500">Servings</span>
                            <span class="font-medium">{servings}</span>
                        </div>
                        <div class="bg-gray-50 px-4 py-2 rounded-md">
                            <span class="block text-sm text-gray-500">Calories</span>
                            <span class="font-medium">{calories}</span>
                        </div>
                    </div>

                    {tags && tags.length > 0 && (
                        <div class="flex flex-wrap gap-2 mb-6 justify-center">
                            {tags.map((tag) => (
                                <span class="bg-aquamarine-blue-100 text-aquamarine-blue-800 text-xs px-2 py-1 rounded">{tag}</span>
                            ))}
                        </div>
                    )}

                    <div class="flex flex-col md:flex-row gap-6 mb-8">
                        {idealImage && (
                            <div class="flex-1">
                                <img src={idealImage} alt={`${title}`} class="w-full h-auto rounded-lg shadow-sm" />
                            </div>
                        )}
                        {realisticImage && idealImage !== realisticImage && (
                            <div class="flex-1">
                                <img src={realisticImage} alt={`${title}`} class="w-full h-auto rounded-lg shadow-sm" />
                            </div>
                        )}
                    </div>

                    <div class="prose prose-lg max-w-none">
                        <slot />
                    </div>
                </div>
            </article>
        </div>
    </Container>
</BaseLayout>

<!-- Styles are now handled by Tailwind classes -->
