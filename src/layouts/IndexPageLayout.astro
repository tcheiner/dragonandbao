---
import "../styles/global.css";
import BaseLayout from './BaseLayout.astro'
import TopLayout from '../components/global/BaseHead.astro'
import Footer from '../components/global/Footer.astro'
import CustomisedBreadCrumbs from "../components/CustomisedBreadCrumbs.astro";
import Container from '../components/Container.astro'
let {title, description, image, subTitle, canonicalURL} = Astro.props;

if (!subTitle) {
    subTitle = title;
}
---
    <div class="flex-1 py-5">
        <Container size="md">
            <main class="flex min-h-[80vh] flex-auto flex-col w-full p-4 max-w-screen-lg" transition:name="hero">
                <TopLayout>
                    <div class="border-b pb-2">
                        <div class="mb-8">
                            <CustomisedBreadCrumbs/>
                        </div>
                        <h2
                                class="scroll-m-20 pb-2 text-3xl font-semibold tracking-tight first:mt-0 text-center"
                        >
                            {subTitle}
                        </h2>
                        <p class={`mx-10 italic py-4 text-sm ${description?.length > 50 ? 'text-left' : 'text-center'}`}>
                            {description}
                        </p>
                    </div>
                </TopLayout>
            </main>
        </Container>
        </div>
