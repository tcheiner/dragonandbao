---
import "../styles/global.css";
import BaseHead from "../components/global/BaseHead.astro";
import Footer from "../components/global/Footer.astro";
import Announcement from "../components/global/Announcement.astro";
import { siteConfig } from "../content/siteConfig.js";
interface Props {
	title?: string
	description?: string
	ogImage?: URL
	canonicalURL?: URL
}
---
<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{siteConfig.siteData.siteName}</title>
	<BaseHead />
</head>

<body class="min-h-screen bg-background font-sans antialiased min-w-sm">
<Announcement />
<div class="flex flex-col items-center justify-center">
	<slot />
</div>
<Footer />
</body>
</html>