---
import "../../styles/global.css";
import { siteConfig } from "../../config/siteConfig.js";
---
<footer >
  <div class="items-center text-center 2xl:max-w-7xl lg:px-16 md:px-12 mx-auto px-8 w-xl xl:px-36">
    <div class="flex flex-col gap-y-12 items-start justify-center lg:flex-row lg:items-center lg:py-16 pb-6 pt-16">
      <div class="lg:text-center lg:mx-auto">
        <div class="flex items-center lg-text-center">
          <div class="lg:text-center lg:mx-auto">
            <div class="flex items-center text-wild-sand-50">
              <div class="lg:text-center items-center border-b w-full lg:mx-auto">
                <img src="/images/cooking/line-logo-white.png" alt="dragon&bao" class="mx-auto mb-5 w-1/2 md:w-1/2 lg:w-1/2" />
                <p class="text-sm text-center mb-5 mt-1">
                  {siteConfig.siteData.designedByText}<br />by
                  <a href={siteConfig.siteData.developerWebsite} class="underline duration-200">
                    {siteConfig.siteData.developerName}.
                  </a>
                </p>
              </div>
            </div>
          </div>
        </div>
          <nav class="flex justify-center gap-8 border-b w-full mb-11 mt-11">
            {siteConfig.siteData.socialLinks.map((link) => (
                <a href={link.href} class="h-8 delay-150 text-sm transition-colors">
                  {link.name}
                </a>
            ))}
          </nav>
      </div>
    </div>
    <!--<div class="flex flex-col border-t w-full items-center text-center lg:mx-auto lg:text-center md:pt-6 pb-12 pt-8">-->
    <!--  <p class="md:mt-0 mt-6 text-sm">-->
    <!--    {siteConfig.siteData.inspirationCredit}-->
    <!--  </p>-->
    <!--</div>-->
  </div>
</footer>
